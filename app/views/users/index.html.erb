<h1>Listing users</h1>

<table class="table table-hover"> 
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Zip</th>
    <!-- <th>Password digest</th> -->
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.phone %></td>
    <td><%= user.zip %></td>
    <!-- <td><%= user.password_digest %></td> -->
    <td><%= link_to 'Show', user, class: 'btn btn-primary'%></td>
    <td><%= link_to 'Edit', edit_user_path(user), class: 'btn btn-warning' %></td>
    <td><%= link_to 'Destroy', user, class: 'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

